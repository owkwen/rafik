<html>
<head>
	<title>Rafik demaaaaaaaaaaa</title>
	<script type="text/javascript" src="http://cdn.peerjs.com/0/peer.min.js"></script>
	<script type="text/javascript" src="http://codeorigin.jquery.com/jquery-2.0.3.min.js"></script>
	<script type="text/javascript" src="javascripts/uuid.js"></script>
</head>
<body>
<script type="text/javascript">
var code = uuid.v4(); 
var peer = new Peer(code, {host: '192.168.2.17', port: 3001});

peer.on('connection', function(conn){
  conn.on('data', function(data) {
    alert(data);
  });
});



$().ready(function(){
$("#id").text(code);

$("#remote-id").focusout(function(){

	var conn = peer.connect($("#remote-id"));
	conn.on('open', function() {
	  conn.send('Hello world!');
	});


});







});
</script>
<div id="connection">
Your id : <span id="id"></span>

<input type="text" id="remote-id"/>
</div>
</body>
</html>